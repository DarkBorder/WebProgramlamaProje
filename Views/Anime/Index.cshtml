                @Html.DisplayFor(modelItem => item.IMDB_Puan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AktifMi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnimeninKonusu)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.AnimeTanitimFoto)*@
                <img src="@Url.Content(item.AnimeTanitimFoto)" class="d-block w-100" asp-append-version="true" />
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.AnimeTanitimFoto)*@
                <img src="@Url.Content(item.AnimeKucukFoto)" class="d-block w-100" asp-append-version="true" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FragmanVideosu)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
