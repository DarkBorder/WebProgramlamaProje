                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studyo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimeAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaslamaTarihi)
            </th>
