            <th>
                @Html.DisplayNameFor(model => model.AnimeTanitimFoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimeKucukFoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FragmanVideosu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Studyo.StudyoAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnimeAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaslamaTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BitisTarihi)
            </td>
